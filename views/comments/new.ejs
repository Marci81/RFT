<% include ../partials/header %>
<link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">
<link rel="stylesheet" href="/css/newBookForm.css">


<h1>book<span id="bold">review</span></h1>

<form class="form-container" action="/books/<%= book._id %>/comments" method="post">
    <div class="container">
        <div class="form-title"><h2>Add New Comment to <%= book.title %></h2></div>
        <div class="form-title">Text</div>
        <input class="form-field" type="text" name="comment[text]" placeholder="Text "/><br/>
        <div class="form-title">Author</div>
        <input class="form-field" type="text" name="comment[author]" placeholder="John Doe"/><br/>
        <div class="form-title">Score</div>
        <input class="form-field" type="number" name="comment[score]">
        <div class="submit-container">
            <input class="submit-button" type="submit" value="Submit"/>
        </div>
    </div>
</form>

<a href="/books">Go Back</a>

